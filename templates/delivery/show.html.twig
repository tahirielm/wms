{% extends 'base.html.twig' %}

{% block title delivery.reference %}


{% block body %}
	<div class="row">
		<div class="col mx-auto">
			<article>

				<article class="bg-white rounded shadow post">

					<h2 class="h5 ps-5 pt-3 text-secondary text-muted">{{ delivery.reference }}</h2>
					<h2 class="h5 ps-5 pt-3 text-secondary text-muted">{{ delivery.commande }}</h2>
					<h3 class="h6 ps-5 pt-3 text-secondary text-muted">{{ delivery.date|date('Y-m-d') }}</h3>

					<div class="ps-3 pb-3">
						<a href="{{ path('app_delivery_edit',{id: delivery.id}) }}" class="btn btn-light">Edit</a>
						<a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-delivery-delete-form').submit(); " class="btn btn-light">Delete</a>
					</div>
				</article>
			</div>
		</div>

		<form id="js-delivery-delete-form" action="{{ path('app_delivery_delete',{id: delivery.id}) }}" method="post" style="display:none;">
			<input type="hidden" name="csrf_token" value="{{ csrf_token('delivery_deletion'~ delivery.id) }}">
			<input type="hidden" name="_method" value="DELETE">
		</form>
	{% endblock %}
