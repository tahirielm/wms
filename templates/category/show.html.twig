{% extends 'base.html.twig' %}

{% block title category.name %}


{% block body %}
	<div class="row">
		<div class="col mx-auto">
			<article>

				<article class="bg-white rounded shadow post">

					<h2 class="h5 ps-5 pt-3 text-secondary text-muted">{{ category.name }}</h2>
					<h3 class="h6 ps-5 pt-3 text-secondary text-muted">{{ category.description }}</h3>
				</div>
				<div class="ps-3 pb-3">
					<a href="{{ path('app_category_edit',{id: category.id}) }}" class="btn btn-light">Edit</a>
					<a href="#" onclick="event.preventDefault(); confirm('Are you sure?') && document.getElementById('js-category-delete-form').submit(); " class="btn btn-light">Delete</a>
				</div>
			</article>
		</div>
	</div>


	<form id="js-category-delete-form" action="{{ path('app_category_delete',{id: category.id}) }}" method="post" style="display:none;">
		<input type="hidden" name="csrf_token" value="{{ csrf_token('category_deletion'~ category.id) }}">
		<input type="hidden" name="_method" value="DELETE">
	</form>
{% endblock %}
